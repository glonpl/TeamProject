{% extends 'base.html.twig' %}

{% block title %}Interview{% endblock %}

{% block body %}
    <h1>Interview</h1>

<form method="post" action="{{ path('interview_process') }}">
<table class="table">
        <tbody>
        {% for area in areas %}
            <tr>
                <th>Obszar</th>
                <td>{{ area.Name }}</td>
            </tr>
            <tr>
                <th>Objawy</th>
                <td>

                    {% for sympthom in area.getSymptoms() %}
                        <p><input type="checkbox" name="sympthoms[]" value="{{ sympthom.getId() }}">  {{ sympthom.getName() }}</p>
                    {% endfor %}

                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <button class="btn btn-success">Poka≈º</button>

</form>
{% endblock %}
